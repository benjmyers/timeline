<div class="span12 offset2">
  <%= simple_form_for(@event, html: {class: "form-horizontal"}) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container-fluid">
  <h2 class="with-yellow">New Event</h2>
  <% timeline_id = params[:data] %>
    <div class="form-inputs">
      <%= f.input :title, :required => true, :autofocus => true %>
    </div>

  <div class="row-fluid">
    <div class="span7">
      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description, :style => "width:420px;", :required => true %>
      </div>
    </div>
    <div class="span5">
    </br>
      <div class="field">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>
    </br>
      <div class="field">
        <%= f.label :date %>
        <%= f.text_field :date, :value=>Date.today.strftime('%m/%d/%Y'), :id =>"dp5" %>
      </div> 
    </br>
      <div class="field">
        <%= f.label :time%>
        <%= f.text_field :time, :value=>Time.current.strftime('%H:%M') %>
      </div>
      <div class="id hidden">
        <%= f.text_field :timeline_object_id, :value=> timeline_id %>
      </div>
      </br></br></br></br></br></br></br></br>
      <div class="actions">
        <%= f.button :submit, :class => "btn btn-large btn-block btn-custom" %>
    </div>
    </div>
  </div>
</div>


</div>

<% end %>
