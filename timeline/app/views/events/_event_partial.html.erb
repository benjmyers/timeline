<div class="container-fluid modal hide fade" id="<%=event.id%>">
    <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <p><h3> <%= event.title %> </h3></p>
  </div>
  <div class="row-fluid">
    <div class="span5">
      <p>
        <%= image_tag event.image.url(:large) %>
      </p>
      <%= link_to 'Show', event_path(event) %> |
      <%= link_to 'Edit', edit_event_path(event) %> |
      <%= link_to "Delete", event, method: :delete, data: { confirm: "Are you sure you want to delete this   event?"} %> | 
      <%= link_to 'Back', events_path %>
    </div>
    <div class="span6">
      <p>
        <b>Date:</b>
        <%= event.date %>
        <b>Time:</b>
        <%= event.time %>
      </p>
      <p>
        <b>Description:</b>
        <%= event.description %>
      </p>
    </div>
  </div>
</div>